# terraform.tfvars.example
# Copy this file to terraform.tfvars and update with your values

# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "arbornote"
environment  = "prod"

# Domain Configuration (optional - leave empty if not using custom domain)
domain_name = ""  # e.g., "yourdomain.com"

# EC2 Configuration
instance_type = "t3.medium"  # Adjust based on your needs
key_name      = "your-ec2-key-pair-name"  # Must exist in your AWS account

# Application Configuration
nearmap_api_key  = "your-nearmap-api-key-here"
flask_secret_key = "your-super-secret-flask-key-change-this"
# ==============================================
# ARBORNOTE AWS PRODUCTION ENVIRONMENT
# ==============================================
# Copy this file to .env and update with your actual values

# ==============================================
# FLASK CONFIGURATION
# ==============================================
FLASK_ENV=production
FLASK_SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0
FLASK_PORT=4000

# ==============================================
# API KEYS
# ==============================================
NEARMAP_API_KEY=your-nearmap-api-key-here

# ==============================================
# AWS CONFIGURATION
# ==============================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# ==============================================
# PROCESSING CONFIGURATION
# ==============================================
CHECKPOINTS_DIR=./checkpoints
TEMP_DIR=temp_files
OUTPUT_DIR=outputs
LOGS_DIR=logs
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT_MINUTES=30
MAX_UPLOAD_SIZE_MB=50

# ==============================================
# DATABASE (for scaling)
# ==============================================
DATABASE_URL=sqlite:///arbornote.db

# ==============================================
# MONITORING AND ERROR TRACKING
# ==============================================
SENTRY_DSN=your-sentry-dsn-for-error-tracking
LOG_LEVEL=INFO

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
CORS_ORIGINS=https://your-domain.com
RATE_LIMIT_PER_MINUTE=10
SESSION_TIMEOUT_HOURS=2
FORCE_HTTPS=true
SSL_DISABLE=false

# ==============================================
# FEATURE FLAGS
# ==============================================
FORCE_SIMULATION_MODE=false
FORCE_SKIP_DEPENDENCIES=false
ENABLE_DEBUG_LOGGING=false

# ==============================================
# AI MODEL CONFIGURATION
# ==============================================
DEFAULT_MODEL=model_100
DEFAULT_CONFIDENCE_THRESHOLD=0.25
DEFAULT_IOU_THRESHOLD=0.7
DEFAULT_PATCH_SIZE=800
DEFAULT_PATCH_OVERLAP=0.25

# ==============================================
# PERFORMANCE TUNING
# ==============================================
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
WORKER_TIMEOUT=300
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300